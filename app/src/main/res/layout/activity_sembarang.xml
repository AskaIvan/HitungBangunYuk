<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sembarang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.project.xirpl304132231.hitungbangunyuk.Sembarang">

    <EditText
        android:id="@+id/editTextA"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvHasilSembarang"
        android:layout_alignStart="@+id/tvHasilSembarang"
        android:layout_alignTop="@+id/editTextC"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="a ="
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextB"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewSembarang"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_toLeftOf="@+id/editTextC"
        android:layout_toStartOf="@+id/editTextC"
        android:ems="10"
        android:hint="b ="
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextC"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewSembarang"
        android:layout_marginTop="65dp"
        android:layout_toEndOf="@+id/imageViewSembarang"
        android:layout_toRightOf="@+id/imageViewSembarang"
        android:ems="10"
        android:hint="c ="
        android:inputType="number" />

    <TextView
        android:id="@+id/tvHasilSembarang"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:fontFamily="casual"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="casual"
        android:text="Segitiga Sembarang"
        android:textSize="30sp"
        android:textStyle="normal|italic" />

    <ImageView
        android:id="@+id/imageViewSembarang"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/sembarang" />

    <Button
        android:id="@+id/buttonHitungSembarang"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvHasilSembarang"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:text="HITUNG" />

</RelativeLayout>
