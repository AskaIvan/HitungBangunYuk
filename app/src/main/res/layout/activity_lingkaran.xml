<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lingkaran"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/hai"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.project.xirpl304132231.hitungbangunyuk.lingkaran">

    <EditText
        android:id="@+id/editTextJari"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="r ="
        android:inputType="number"
        android:layout_above="@+id/buttonOk"
        android:layout_marginBottom="54dp"
        android:layout_toLeftOf="@+id/imageView" />

    <Button
        android:id="@+id/buttonOk"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HITUNG"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Lingkaran"
        android:textSize="30sp"
        android:textStyle="normal|italic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/tvHasilLingkaran"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editTextJari"
        android:layout_alignStart="@+id/editTextJari"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/lingkaran"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
