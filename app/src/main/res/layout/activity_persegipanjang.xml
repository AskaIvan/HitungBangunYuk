<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_persegipanjang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.project.xirpl304132231.hitungbangunyuk.persegipanjang">

    <EditText
        android:hint="        Masukan Panjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextPanjang"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="194dp" />

    <EditText
        android:hint="        Masukan Lebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextLebar"
        android:layout_below="@+id/editTextPanjang"
        android:layout_alignLeft="@+id/editTextPanjang"
        android:layout_alignStart="@+id/editTextPanjang" />

    <TextView
        android:layout_width="150dp"
        android:id="@+id/textView3"
        android:layout_above="@+id/buttonBackPersegipanjang"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:layout_height="50dp" />

    <Button
        android:text="Kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBackPersegipanjang"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/persegipanjang2"
        android:layout_marginTop="28dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:text="Hitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonHitung"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/buttonBackPersegipanjang"
        android:layout_alignStart="@+id/buttonBackPersegipanjang"
        android:layout_marginBottom="18dp" />
</RelativeLayout>
