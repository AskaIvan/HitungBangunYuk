<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_persegipanjang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.project.xirpl304132231.hitungbangunyuk.persegipanjang">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:text="Persegi Panjang"
        android:textSize="30sp"
        android:textStyle="normal|italic"/>

    <EditText
        android:id="@+id/editTextPanjang"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonHitungT"
        android:layout_alignLeft="@+id/editTextLebar"
        android:layout_alignStart="@+id/editTextLebar"
        android:layout_marginBottom="39dp"
        android:ems="10"
        android:hint="P ="
        android:inputType="number"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        app:srcCompat="@drawable/persegipanjang2"/>

    <Button
        android:id="@+id/buttonHitungT"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="13dp"
        android:text="HITUNG"/>

    <TextView
        android:id="@+id/tvHasilPersegiPanjang"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/buttonHitungT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:fontFamily="casual"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/editTextLebar"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextPanjang"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2"
        android:ems="10"
        android:hint="l ="
        android:inputType="number"/>
</RelativeLayout>
