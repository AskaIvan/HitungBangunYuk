<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_persegipanjang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="id.sch.smktelkom_mlg.project.xirpl304132231.hitungbangunyuk.persegipanjang">

    <EditText
        android:id="@+id/editTextD1lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="194dp"
        android:ems="10"
        android:hint="        Masukan Diagonal 1"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/editTextD2lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextD1lay"
        android:layout_alignStart="@+id/editTextD1lay"
        android:layout_below="@+id/editTextD1lay"
        android:ems="10"
        android:hint="        Masukan Diagonal 2"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/buttonBackLayang"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"/>

    <Button
        android:id="@+id/buttonBackLayang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Kembali"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/layanglayang"/>

    <Button
        android:id="@+id/buttonHitungKetupat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/buttonBackLayang"
        android:layout_alignStart="@+id/buttonBackLayang"
        android:layout_marginBottom="18dp"
        android:text="Hitung"/>
</RelativeLayout>
