<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_segitiga"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.project.xirpl304132231.hitungbangunyuk.segitiga">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:fontFamily="casual"
        android:text="Segitiga"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/segitiga"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/segitiga" />

    <EditText
        android:id="@+id/editTextTinggi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextAlas"
        android:layout_alignLeft="@+id/segitiga"
        android:layout_alignStart="@+id/segitiga"
        android:layout_marginBottom="84dp"
        android:ems="10"
        android:hint="t ="
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextAlas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="104dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:ems="10"
        android:hint="a ="
        android:inputType="number" />

    <Button
        android:id="@+id/buttonHitung"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/segitiga"
        android:layout_marginTop="24dp"
        android:text="HITUNG" />

    <TextView
        android:id="@+id/tvHasil"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/buttonHitung"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>